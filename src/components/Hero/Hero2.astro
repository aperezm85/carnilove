---
import BagsFoodImage from "@/assets/hero/bags-food.png";
import HeroDog from "@/assets/hero/hero-dog.png";
import EastIcon from "@/assets/icons/east.svg";
import HeroHeader from "@/components/HeroHeader.astro";
import ButtonRed from "@/components/shared/ButtonRed.astro";
---

<section id="hero-2" class="w-full h-full overflow-hidden absolute top-0 pt-20">
  <HeroHeader textColor="text-text-primary" />
  <section class="mt-[104px] ml-[108px] z-3">
    <h1
      class="font-large-heading text-[100px]/[80%] lg:text-[120px]/[80%] xl:text-[150px]/[80%] uppercase text-text-primary"
    >
      Subscribe <span class="text-text-minimal">& save</span>
    </h1>
    <h2
      class="font-heading font-extrabold text-[24px]/[30px] lg:text-[28px]/[34px] xl:text-[34px]/[38px] uppercase text-text-primary mt-[30px]"
    >
      SUBSCRIBERS GET FREE DELIVERY AND TRIPLE POINTS
    </h2>

    <ButtonRed className="mt-[30px] flex flex-row items-center gap-1.5 z-2">
      Subscribe today <EastIcon class="w-6 h-6" />
    </ButtonRed>
  </section>

  <section
    class="absolute right-[14%] top-[30%] lg:top-[22%] size-30 lg:size-60 xl:size-[300px] rounded-full bg-surface-background-red text-text-invert flex flex-col items-center justify-center -z-1"
  >
    <span
      class="font-large-heading text-[60px]/[80%] lg:text-[160px]/[80%] xl:text-[190px]/[80%] uppercase"
    >
      3X
    </span>
    <span
      class="font-large-heading text-[18px]/[80%] lg:text-[32px]/[80%] xl:text-[40px]/[80%] uppercase"
    >
      CARNI POINTS
    </span>
  </section>

  <section class="absolute top-0 left-0 w-full h-full overflow-hidden">
    <img
      src={BagsFoodImage.src}
      alt="bags food"
      class="w-[50%] h-auto object-cover absolute -bottom-3.5 left-20 aspect-656/536 scale-95 overflow-hidden z-0"
    />
  </section>
  <section class="absolute top-0 left-0 w-full h-full overflow-hidden">
    <img
      src={HeroDog.src}
      alt="hero dog"
      class="w-[50%] h-auto object-cover aspect-767/610 absolute bottom-0 right-0"
    />
  </section>
</section>
