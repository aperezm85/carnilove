---
import ArrowDownIcon from "@/assets/icons/arrow-down.svg";
import SearchIcon from "@/assets/icons/search.svg";
import LogoIcon from "@/assets/Logo.svg";

const { textColor = "text-text-invert" } = Astro.props;
---

<div
  class="relative w-full grid template-cols-[1fr_1fr_1fr] grid-cols-3 items-start justify-between pt-9 px-8"
>
  <nav class="">
    <ul class="m-0 p-0 list-none flex flex-row gap-5 items-center">
      <li
        class:list={[
          "font-large-heading text-[26px]/[30px] uppercase",
          textColor,
        ]}
      >
        DOGS
      </li>
      <li
        class:list={[
          "font-large-heading text-[26px]/[30px] uppercase",
          textColor,
        ]}
      >
        CATS
      </li>
      <li
        class:list={[
          "font-large-heading text-[26px]/[30px] uppercase",
          textColor,
        ]}
      >
        |
      </li>
      <li><SearchIcon class:list={[textColor, "w-6 h-6"]} /></li>
    </ul>
  </nav>
  <LogoIcon class="max-w-[110px] h-auto mx-auto" />
  <nav class="">
    <ul class="m-0 p-0 list-none flex flex-row justify-end gap-5">
      <li
        class:list={[
          "font-large-heading text-[26px]/[30px] uppercase",
          textColor,
        ]}
      >
        FIND YOUR FOOD
      </li>
      <li
        class:list={[
          "font-large-heading text-[26px]/[30px] uppercase",
          textColor,
        ]}
      >
        SUBSCRIBE
      </li><li
        class:list={[
          "font-large-heading text-[26px]/[30px] uppercase",
          textColor,
        ]}
      >
        ABOUT
      </li>
      <li
        class:list={[
          "font-large-heading text-[26px]/[30px] uppercase",
          textColor,
        ]}
      >
        |
      </li>
      <li
        class:list={[
          "font-large-heading text-[26px]/[30px] uppercase flex gap-2.5 items-center",
          textColor,
        ]}
      >
        EN <ArrowDownIcon class="${textColor}" />
      </li>
    </ul>
  </nav>
</div>
